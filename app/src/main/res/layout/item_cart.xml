<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@color/gray_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product_name"
            style="@style/Roboto.SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:text="Ulos Mangiring"
            android:textColor="@color/dark_blue"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ly_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/et_product_qty"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name">

            <TextView
                android:id="@+id/tv_size"
                style="@style/Roboto.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Size"
                android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/Roboto.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 1.350.000"
                android:textColor="@color/dark_blue" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_product_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:background="@drawable/edittext_rounded"
            android:padding="@dimen/_8sdp"
            android:text="2"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintStart_toEndOf="@id/ly_product_price"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_product_qty"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            app:srcCompat="@drawable/ic_baseline_close_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>